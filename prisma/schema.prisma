generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   String @id @default(nanoid())
  name String
}

model Hwork {
  id      String   @id @default(cuid())
  subject String
  title   String
  date    DateTime

  images String[] @default([])

  image String?
}

model DutySchedule {
  id String @id @default(nanoid())

  date DateTime @unique

  names String[] @default([])

  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model Timetable {
  id           String @id @default(nanoid())
  day          Day
  lessonNumber Int
  subject      String

  createdAt DateTime @default(now())

  @@unique([day, lessonNumber])
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}
